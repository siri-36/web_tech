    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ElectroHub - Customer Feedback</title>
    <style>
        :root {
            --primary-blue: #2563eb;
            --dark-blue: #1e40af;
            --error-red: #dc2626;
            --text-main: #1f2937;
            --bg-light: #f8fafc;
            --border: #e2e8f0;
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            background-color: var(--bg-light);
            color: var(--text-main);
            display: flex;
            justify-content: center;
            padding: 40px 20px;
        }

        .feedback-card {
            background: white;
            width: 100%;
            max-width: 600px;
            padding: 32px;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }

        header { border-bottom: 2px solid var(--bg-light); margin-bottom: 24px; padding-bottom: 16px; }
        h2 { margin: 0; color: #111827; font-size: 1.5rem; }
        p { color: #64748b; font-size: 0.9rem; margin-top: 4px; }

        .q-wrapper { margin-bottom: 24px; position: relative; }
        .q-label { display: block; font-weight: 600; margin-bottom: 8px; font-size: 0.95rem; }
        .req { color: var(--error-red); margin-left: 2px; }

        /* Inputs */
        input[type="text"] {
            width: 100%;
            padding: 12px;
            border: 1px solid var(--border);
            border-radius: 6px;
            font-size: 1rem;
            transition: all 0.2s;
            box-sizing: border-box;
        }
        input[type="text"]:focus { outline: none; border-color: var(--primary-blue); box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1); }

        /* Options styling */
        .options-grid { display: flex; flex-direction: column; gap: 10px; background: var(--bg-light); padding: 12px; border-radius: 8px; }
        .opt-item { display: flex; align-items: center; gap: 10px; cursor: pointer; font-size: 0.95rem; }
        .opt-item input { cursor: pointer; width: 16px; height: 16px; }

        /* Validation Messages */
        .error-hint { color: var(--error-red); font-size: 0.8rem; margin-top: 6px; font-weight: 500; display: none; }
        .input-invalid { border-color: var(--error-red) !important; background-color: #fef2f2; }

        /* Character Counter */
        .char-counter { font-size: 0.75rem; color: #94a3b8; text-align: right; margin-top: 4px; }

        /* Submit Button */
        .btn-submit {
            background-color: var(--primary-blue);
