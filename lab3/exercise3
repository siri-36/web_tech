<body>

<div class="feedback-card">
    <header>
        <h2>ElectroHub Feedback</h2>
        <p>Help us improve your shopping experience.</p>
    </header>

    <form id="surveyForm" novalidate>
        <div id="surveyRoot"></div>
        <button type="submit" class="btn-submit">Submit Feedback</button>
    </form>
</div>

<script>
    // 1. Structure defining questions for an Electronic Store
    const surveyConfig = [
        {
            id: "customer_name",
            type: "text",
            label: "Full Name",
            required: true,
            limit: 40
        },
        {
            id: "purchase_cat",
            type: "radio",
            label: "Main category of your purchase?",
            required: true,
            options: ["Smartphones", "Laptops & PCs", "Home Appliances", "Audio/Accessories"]
        },
        {
            id: "store_factors",
            type: "checkbox",
            label: "What satisfied you today? (Select at least 2)",
            required: true,
            min: 2,
            options: ["Staff Knowledge", "Pricing", "Store Cleanliness", "Product Range", "Demo Availability"]
        },
        {
            id: "comments",
            type: "text",
            label: "Any specific feedback for our tech team?",
            required: false,
            limit: 100
        }
    ];

    const root = document.getElementById('surveyRoot');

    // 2. Dynamic generation (DOM manipulation)
    function initializeSurvey() {
        surveyConfig.forEach(q => {
            const wrapper = document.createElement('div');
            wrapper.className = 'q-wrapper';
            wrapper.id = `wrapper-${q.id}`;

            const label = document.createElement('label');
            label.className = 'q-label';
            label.innerHTML = `${q.label} ${q.required ? '<span class="req">*</span>' : ''}`;
            wrapper.appendChild(label);

            if (q.type === 'text') {
                const input = document.createElement('input');
                input.type = 'text';
                input.id = q.id;
                input.placeholder = `Type here...`;
                
                // Real-time character counter
                if (q.limit) {
                    const counter = document.createElement('div');
                    counter.className = 'char-counter';
                    counter.id = `count-${q.id}`;
                    counter.innerText = `0 / ${q.limit}`;
                    
                    input.addEventListener('input', () => {
                        const len = input.value.length;
                        counter.innerText = `${len} / ${q.limit}`;
                        if (len > q.limit) counter.style.color = 'var(--error-red)';
                        else counter.style.color = '#94a3b8';
                    });
                    
                    wrapper.appendChild(input);
                    wrapper.appendChild(counter);
                } else {
                    wrapper.appendChild(input);
                }
            } 
            else {
                const group = document.createElement('div');
                group.className = 'options-grid';
                q.options.forEach(opt => {
                    const item = document.createElement('label');
                    item.className = 'opt-item';
                    item.innerHTML = `<input type="${q.type}" name="${q.id}" value="${opt}"> ${opt}`;
                    group.appendChild(item);
                });
                wrapper.appendChild(group);
            }

            const err = document.createElement('div');
            err.className = 'error-hint';
            err.id = `err-${q.id}`;
            wrapper.appendChild(err);

            root.appendChild(wrapper);
        });
    }

    // 3, 4, 5. Advanced Validation Logic
    function validate() {
        let allValid = true;

        surveyConfig.forEach(q => {
            const errEl = document.getElementById(`err-${q.id}`);
            let errorMsg = "";
            let fieldValid = true;

            if (q.type === 'text') {
                const el = document.getElementById(q.id);
                const val = el.value.trim();
                if (q.required && val === "") {
                    fieldValid = false;
                    errorMsg = "This information is required.";
                } else if (q.limit && val.length > q.limit) {
                    fieldValid = false;
                    errorMsg = `Maximum ${q.limit} characters allowed.`;
                }
                el.classList.toggle('input-invalid', !fieldValid);
            } 
            else if (q.type === 'radio') {
                const picked = document.querySelector(`input[name="${q.id}"]:checked`);
                if (q.required && !picked) {
                    fieldValid = false;
                    errorMsg = "Please select one category.";
                }
            } 
            else if (q.type === 'checkbox') {
                const checked = document.querySelectorAll(`input[name="${q.id}"]:checked`);
                if (q.required && checked.length === 0) {
                    fieldValid = false;
                    errorMsg = "Selection is required.";
                } else if (q.min && checked.length < q.min) {
                    fieldValid = false;
                    errorMsg = `Please select at least ${q.min} factors.`;
                }
            }

            if (!fieldValid) {
                errEl.innerText = errorMsg;
                errEl.style.display = 'block';
                allValid = false;
            } else {
                errEl.style.display = 'none';
            }
        });

        return allValid;
    }

    document.getElementById('surveyForm').addEventListener('submit', (e) => {
        e.preventDefault();
        if (validate()) {
            alert("Thank you! Your feedback for ElectroHub has been recorded.");
            location.reload();
        }
    });

    initializeSurvey();
</script>

</body>
</html>
