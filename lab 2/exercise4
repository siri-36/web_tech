<body>

    <div id="toast"></div>

    <div class="dashboard-container">
        <header>
            <h1>User Management System</h1>
        </header>

        <div class="glass-card">
            <div class="section-title">
                <span>Registration</span>
            </div>
            <form id="userForm">
                <div class="form-grid">
                    <div class="input-group">
                        <label>Full Name</label>
                        <input type="text" id="regName" placeholder="Your Name" required>
                    </div>
                    <div class="input-group">
                        <label>Email Address</label>
                        <input type="email" id="regEmail" placeholder="email@company.com" required>
                    </div>
                    <div class="input-group">
                        <label>Mobile Number</label>
                        <input type="text" id="regMobile" placeholder="10-digit mobile" required>
                    </div>
                    <div class="input-group">
                        <label>Secure Password</label>
                        <input type="password" id="regPassword" placeholder="Minimum 6 characters" required>
                    </div>
                </div>
                <div class="action-row">
                    <button type="button" class="btn-outline" onclick="purgeDatabase()">Clear Database</button>
                    <button type="submit" class="btn-primary">Provision User Account</button>
                </div>
            </form>
        </div>

        <div class="glass-card">
            <div class="section-title">
                <span>Active Directory</span>
            </div>
            <table id="userDirectory">
                <thead>
                    <tr>
                        <th>Identified User</th>
                        <th>Contact Details</th>
                        <th>Security Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="directoryBody">
                    </tbody>
            </table>
        </div>
    </div>

    <script>
        /**
         * System State Configuration
         * Data Persistence Key: 'auth_user_registry'
         */
        const STORAGE_KEY = 'auth_user_registry';
        const userForm = document.getElementById('userForm');
        const directoryBody = document.getElementById('directoryBody');

        // Initialization: Load User Registry on DOMContentLoaded
        document.addEventListener('DOMContentLoaded', synchronizeDirectory);

        // Core Registration Logic
        userForm.addEventListener('submit', (e) => {
            e.preventDefault();

            // Input Extraction & Sanitization
            const userData = {
                name: document.getElementById('regName').value.trim(),
                email: document.getElementById('regEmail').value.trim(),
                mobile: document.getElementById('regMobile').value.trim(),
                password: document.getElementById('regPassword').value
            };

            // Server-side Logic Simulation (Validation)
            if (userData.mobile.length !== 10 || isNaN(userData.mobile)) {
                return notify("Validation Error: Mobile must be 10 numeric digits.");
            }
            if (userData.password.length < 6) {
                return notify("Security Error: Password fails minimum length requirements.");
            }

            // Retrieve and Parse Local Storage
            const registry = JSON.parse(localStorage.getItem(STORAGE_KEY)) || [];

            // Duplicate Integrity Check
            if (registry.some(user => user.email === userData.email)) {
                return notify("Conflict: A user with this email already exists.");
            }

            // Persistence Serialization
            registry.push(userData);
            localStorage.setItem(STORAGE_KEY, JSON.stringify(registry));

            notify("Account Provisioned Successfully.");
            userForm.reset();
            synchronizeDirectory();
        });

        /**
         * Synchronizes the UI with the LocalStorage state
         */
        function synchronizeDirectory() {
            const registry = JSON.parse(localStorage.getItem(STORAGE_KEY)) || [];
            directoryBody.innerHTML = '';

            if (registry.length === 0) {
                directoryBody.innerHTML = `<tr><td colspan="4" style="text-align:center; color:#9ca3af; padding: 40px;">No active records found in the directory.</td></tr>`;
                return;
            }

            registry.forEach((user, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>
                        <div class="user-name">${user.name}</div>
                        <div class="user-email">${user.email}</div>
                    </td>
                    <td>${user.mobile}</td>
                    <td><span style="color:#10b981; font-size:0.8rem; font-weight:700;">‚óè Active</span></td>
                    <td>
                        <button class="btn-delete" onclick="deprovisionUser(${index})">Deprovision</button>
                    </td>
                `;
                directoryBody.appendChild(row);
            });
        }

        function deprovisionUser(index) {
            const registry = JSON.parse(localStorage.getItem(STORAGE_KEY)) || [];
            registry.splice(index, 1);
            localStorage.setItem(STORAGE_KEY, JSON.stringify(registry));
            synchronizeDirectory();
            notify("User record deprovisioned from the registry.");
        }

        function purgeDatabase() {
            if (confirm("Executing Global Purge: Are you sure you want to erase all user records?")) {
                localStorage.removeItem(STORAGE_KEY);
                synchronizeDirectory();
                notify("Registry purged. System state reset.");
            }
        }

        function notify(message) {
            const toast = document.getElementById('toast');
            toast.innerText = message;
            toast.style.display = 'block';
            setTimeout(() => { toast.style.display = 'none'; }, 3000);
        }
    </script>
</body>
